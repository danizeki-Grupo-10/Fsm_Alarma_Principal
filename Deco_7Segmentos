`timescale 1ns / 1ps

module Deco_7s #(parameter Bits_Temp = 6, Palabra_UD = 16)(
	input wire [Bits_Temp-1 : 0]I_Ss,
	output reg [Palabra_UD-1:0]SsUD 
	 );

// Siete segmentos Memoria, almacena los digitos de temperatura codificados en 7 Segmentos

parameter [15:0] 
T0  = 16'b1111111100000011,  T1 = 16'b1111111110011111,  T2 = 16'b1111111100100101,  T3 = 16'b1111111100001101,
T4 =  16'b1111111110011001,  T5 = 16'b1111111101001001,  T6 = 16'b1111111101000001,  T7 = 16'b1111111100011111, 
T8 =  16'b1111111100000001,  T9 = 16'b1111111100001001,

T10 = 16'b1001111100000011,  T11 = 16'b1001111110011111,
T12 = 16'b1001111100100101,  T13 = 16'b1001111100001101,  T14 = 16'b1001111110011001,  T15 = 16'b1001111101001001,
T16 = 16'b1001111101000001,  T17 = 16'b1001111100011111,  T18 = 16'b1001111100000001, T19 = 16'b1001111100001001,

T20 = 16'b0010010100000011, T21 = 16'b0010010110011111, T22 = 16'b0010010100100101, T23 = 16'b0010010100001101,
T24 = 16'b0010010110011001, T25 = 16'b0010010101001001, T26 = 16'b0010010101000001, T27 = 16'b0010010100011111,
T28 = 16'b0010010100000001, T29 = 16'b0010010100001001, 

T30 = 16'b0000110100000011, T31 = 16'b0000110110011111,
T32 = 16'b0000110100100101, T33 = 16'b0000110100001101, T34 = 16'b0000110110011001, T35 = 16'b0000110101001001,
T36 = 16'b0000110101000001, T37 = 16'b0000110100011111, T38 = 16'b0000110100000001, T39 = 16'b0000110100001001,

T40 = 16'b1001100100000011, T41 = 16'b1001100110011111, T42 = 16'b1001100100100101, T43 = 16'b1001100100001101,
T44 = 16'b1001100110011001, T45 = 16'b1001100101001001, T46 = 16'b1001100101000001, T47 = 16'b1001100100011111,
T48 = 16'b1001100100000001, T49 = 16'b1001100100001001, 

T50 = 16'b0100100100000011, T51 = 16'b0100100110011111,
T52 = 16'b0100100100100101, T53 = 16'b0100100100001101, T54 = 16'b0100100110011001, T55 = 16'b0100100101001001,
T56 = 16'b0100100101000001,
T57 = 16'b0100100100011111, T58 = 16'b0100100100000001, T59 = 16'b0100100100001001, 

T60 = 16'b0100000100000011,
T61 = 16'b0100000110011111, T62 = 16'b0100000100100101, T63 = 16'b0100000100001101;

// Siete segmentos Decodificador 

always@(I_Ss) 
	begin 
	SsUD = 16'b0000000000000000 ;
	case(I_Ss)
				0 : SsUD = T0 ; 1 : SsUD  = T1 ; 2 : SsUD  = T2 ; 
				3 : SsUD = T3 ; 4 : SsUD  = T4 ; 5 : SsUD  = T5 ; 
				6 : SsUD = T6 ; 7 : SsUD  = T7 ; 8 : SsUD  = T8 ; 
				9 : SsUD  = T9 ; 10 : SsUD  = T10 ; 11 : SsUD  = T11 ;
				12 : SsUD  = T12 ; 13 : SsUD  = T13 ; 14 : SsUD  = T14 ; 15 : SsUD  = T15 ; 
				16 : SsUD  = T16 ; 17 : SsUD  = T17 ; 18 : SsUD  = T18 ; 19 : SsUD  = T19 ;
				20 : SsUD  = T20 ; 21 : SsUD  = T21 ; 22 : SsUD  = T22 ; 23 : SsUD  = T23 ;
				24 : SsUD  = T24 ; 25 : SsUD  = T25 ; 26 : SsUD  = T26 ; 27 : SsUD  = T27 ;
				28 : SsUD  = T28 ; 29 : SsUD  = T29 ; 30 : SsUD  = T30 ; 31 : SsUD  = T31 ;
				32 : SsUD  = T32 ; 33 : SsUD  = T33 ; 34 : SsUD  = T34 ; 35 : SsUD  = T35 ;
				36 : SsUD  = T36 ; 37 : SsUD  = T37 ; 38 : SsUD  = T38 ; 39 : SsUD  = T39 ;
				40 : SsUD  = T40 ; 41 : SsUD  = T41 ; 42 : SsUD  = T42 ; 43 : SsUD  = T43 ;
				44 : SsUD  = T44 ; 45 : SsUD  = T45 ; 46 : SsUD  = T46 ; 47 : SsUD  = T47 ;
				48 : SsUD  = T48 ; 49 : SsUD  = T49 ; 50 : SsUD  = T50 ; 51 : SsUD  = T51 ;
				52 : SsUD  = T52 ; 53 : SsUD  = T53 ; 54 : SsUD  = T54 ; 55 : SsUD  = T55 ;
				56 : SsUD  = T56 ; 57 : SsUD  = T57 ; 58 : SsUD  = T58 ; 59 : SsUD  = T59 ;
				60 : SsUD  = T60 ; 61 : SsUD  = T61 ; 62 : SsUD  = T62 ;
				default : SsUD  = T63 ;

			endcase		
			end 
	
endmodule

